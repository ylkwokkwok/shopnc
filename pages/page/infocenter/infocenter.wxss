.container{
  background: #f6f6f6;
  padding-bottom: 20rpx;
}
.infotop{
  width: 710rpx;
  height: 250rpx;
  margin:auto;
  position: relative;
  overflow: hidden;
  border-radius: 10rpx;
}
.infotop .txbg{
  width: 100%;
  position: absolute;
  top: 20rpx;
  filter:blur(15rpx);
	-webkit-filter:blur(15rpx);
	-moz-filter:blur(15rpx);
	-ms-filter:blur(15rpx);
	-o-filter:blur(15rpx);
  border-radius: 10rpx;
}
.content{
  position: absolute;
  top: 20rpx;
  left:0;
  right: 0;
  width:620rpx;
  margin:auto;
  height: 100%;
}
.content .tx{
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top:50rpx;
  float: left;
}
.content .right{
  float: left;
  margin-left: 20rpx;
  width: 480rpx;
  margin-top:60rpx;
}
.content .right .username{
  font-size: 36rpx;
  display: block;
  color: white;
  text-shadow: 3rpx 3rpx 3rpx gray;
}
.content .right .vip{
  width:40rpx;
  margin-top:10rpx;
  float: left;
  margin-right: 10rpx;
}
.content .right .viptrue{
  font-size: 24rpx;
  color: red;
  line-height: 30rpx;
  float: left;
  margin-top:15rpx;
  text-shadow: 3rpx 3rpx 3rpx gray;
}
.content .right span{
  padding:5rpx 10rpx;
  background:-webkit-gradient(linear, 0% 0%, 100% 0%,from(#568fdc), to(#77b0fd));
  display: block;  
  font-size: 24rpx;
  color: white;
  margin-left: 20rpx;
  float: left;
  border-radius: 20rpx;
  margin-top:8rpx;
}
.content .right .normal{
  font-size: 24rpx;
  color: #f4f5f6;
  text-shadow: 3rpx 3rpx 3rpx gray;
  float: left;
  margin-top:10rpx;
}
.content .right navigator{
  float: left;
  background: #999;
  /* opacity: 0.5;
  filter: alpha(opacity=50); */
  margin-left: 20rpx;
  border-radius: 20rpx;
  color: white;
  font-size: 24rpx;
  padding:5rpx 10rpx;
  margin-top: 8rpx;
}
.content .right .jifen{
  font-size: 24rpx;
  color: black;
  text-align: right;
  margin-top:30rpx;
}
.mymess,.mytab{
  width: 750rpx;
  height: 135rpx;
  background: white;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
}
.elsetab{
  width: 750rpx;
  background: white;
  margin-top:20rpx;
  padding:20rpx 0;
  overflow: hidden;
}
.elsetab>view{
  margin-bottom: 40rpx;
  overflow: hidden;
}
.mymess>navigator{
  width:20%;
  position: relative;
}
.mytab>navigator,.elsetab>view>navigator{
  width:25%;
}
.elsetab>view>navigator{
  float:left;
}
.mymess>navigator>image{
  width: 42rpx;
  height: 42rpx;
  display: block;
  margin:auto;
  margin-top:20rpx;
}
.mymess>navigator>text{
  text-align: center;
  padding-top:20rpx;
  font-size: 24rpx;
  width:100%;
  display: block;
}
.mymess>navigator>span{
  position: absolute;
  padding:0rpx 6rpx;
  border-radius: 50%;
  border:2rpx solid white;
  background: red;
  color: white;
  font-size: 20rpx;
  right: 40rpx;
  top:5rpx;
}
.mytab>navigator>text{
  display: block;
  text-align: center;
  width:100%;
}
.mytab .number{
  font-size: 36rpx;
  margin-top:20rpx;
  font-weight: bold;
}
.mytab .name{
  font-size: 24rpx;
  margin-top: 20rpx;
}
.elsetab>view>navigator>image{
  height: 48rpx;  
  display: block;
  margin:auto;
  margin-top: 10rpx;
}
.elsetab>view>navigator>text{
  font-size: 24rpx;
  text-align: center;
  display: block;
  margin-top:20rpx;
}
.bindphone,.tgewm{
  width: 750rpx;
  background: white;
  margin-top: 20rpx;
  height:80rpx;
  overflow: hidden;
}
.bindphone>navigator{
  width: 710rpx;
  overflow: hidden;
  margin:auto;
  line-height: 80rpx;
}
.bindphone text{
  float: left;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}
.bindphone image{
  float: right;
  width: 20rpx;
  margin-top: 20rpx;
}
.tgewm>text{
  float: left;
  font-size: 28rpx;
  line-height: 80rpx;
  padding-left: 20rpx;
}
.tgewm>.right{
  float: right;
  display: flex;
  flex-direction: row;
}
.tgewm>.right .erweima{
  width:50rpx;
  height: 50rpx;
  margin-top:15rpx;
  margin-right: 20rpx;
}
.tgewm>.right .jt{
  width: 20rpx;
  margin-top:20rpx;
  margin-right: 20rpx;
}