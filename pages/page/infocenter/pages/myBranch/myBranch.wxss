.container{
  background: #f6f6f6;
}
.adtop{
  width: 750rpx;
  position: relative;
  background: white;
}
.adtop .banner{
  width: 100%;
}
.adtop .top_search{
  position: absolute;
  top: 10rpx;
  left: 0;
  right: 0;
  margin:auto;
  width: 710rpx;
}
.adtop .top_search input{
  position: absolute;
  width: 650rpx;
  margin:0 auto;
  height: 70rpx;
  top: 10rpx;
  left: 0;
  right: 0;
  background: #f6f6f6;
  border-radius: 10rpx;
  color:black;
  padding-left: 15rpx;
  font-size: 24rpx;
  letter-spacing: 2rpx;
  opacity: 0.5;
  filter: alpha(opacity=50);
}
.adtop .top_search image{
  position: absolute;
  right: 70rpx;
  width:40rpx;
  height: 40rpx;
  z-index: 100; 
  top:25rpx;
}
.shopdetail{
  background: white;
  padding:20rpx 20rpx;
  width:750rpx;
  overflow: hidden;
}
.shopdetail .left{
  float: left;
  width: 500rpx;
}
.shopdetail .left image{
  width: 60rpx;
  float: left;
  margin-right: 20rpx;
}
.shopdetail .left text{
  float: left;
  font-size: 24rpx;
  line-height: 60rpx;
}
.shopdetail .right{
  float: right;
  display: flex;
  flex-direction: row;
  width:210rpx;
}
.shopdetail .right>view{
  display: flex;
  flex-direction: column;
  width: 50%;
}
.shopdetail .right>view>text{
  font-size: 24rpx;
  text-align: center;
  display: block;
}
.shopdetail .right .wel{
  border-right: 1px solid #ccc;
}
.shopdetail .right .collect image{
  width: 30rpx;
  display: block;
  margin:auto;
}
.tab-h{
  height: 100rpx;
  width: 100%; 
  overflow: hidden;
  line-height: 100rpx;
  font-size: 16px; 
  white-space: nowrap;
  z-index: 99;
  background: white;
  border-top: 1px solid #ccc;  
}
.tab-item{margin:0 36rpx;display: inline-block;height: 98rpx;}
.tab-item.active{color: #568fdc;border-bottom: 2px solid #568fdc;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 52rpx;background: #4675F9;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
swiper{
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: white;
  margin-top:20rpx;
}
swiper .text{
  width:710rpx;
  height: 100%;
  color: #568fdc;
  margin:auto;
  font-size: 24rpx;
}
.shoplist{
  margin-top:20rpx;
  width: 750rpx;
  background: white;
}
.shoplist .shopone{
  width:710rpx;
  margin:auto;
  position: relative;
  overflow: hidden;
}
.shoplist .shopone .left{
  float: left;
  width: 270rpx;
  position: relative;
}
.shoplist .shopone .left>image{
  width: 250rpx;
  margin-top:20rpx;
}
.shoplist .shopone .left>text{
  position: absolute;
  right: 0;
  top: 10rpx;
  color: red;
  font-size: 20rpx;
}
.shoplist .shopone .right{
  float: left;
  width: 420rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.shoplist .shopone .right .jie{
  width: 100%;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding:0rpx 12rpx;
  margin-top:20rpx;
}
.shoplist .shopone .right .price{
  font-size: 30rpx;
  color: red;
  float: left;
  padding-left: 12rpx;
}
.shoplist .shopone .right .tuan{
  width: 110rpx;
  float: left;
  position: relative;
  margin-left: 20rpx;
  margin-top:-5rpx;
}
.shoplist .shopone .right .tuan image{
  width: 100%;
}
.shoplist .shopone .right .bottom{
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}
.shoplist .shopone .right .bottom .ppleft{
  display: flex;
  flex-direction: row;
  width: 80%;
}
.shoplist .shopone .right .oldprice,.shoplist .shopone .right .pinglun{
  font-size: 24rpx;
  color: #afafaf;
  padding-left: 12rpx;
  width:50%;
}
.shoplist .shopone .right .oldprice text{
  text-decoration: line-through;
}
.shoplist .shopone .right .bottom .addCart{
  width: 20%;
}
.shoplist .shopone .right .bottom .addCart image{
  width: 40rpx;
  display: block;
  margin:auto;
}
.shoplist .shopone .right .tuan view{
  position: absolute;
  width:100%;
  text-align: center;
  color: white;
  top:15rpx;
  left: 0;
  right: 0;
  font-size: 20rpx;
}
.shoplist .shopone:last-child .right{
  border-bottom: none;
}
.shoplist .shopone .zhe{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 55rpx;
}