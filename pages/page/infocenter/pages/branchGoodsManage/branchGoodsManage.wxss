.container{
  background: #f6f6f6;
}
.tablist{
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  background: white;
}
.tablist>view{
  width: 50%;
  text-align: center;
  font-size: 30rpx;
}
.tablist view>text{
  width: 100%;
  height: 70rpx;
  margin-top: 9rpx;
  line-height: 70rpx;
  border-left: 1px solid #ccc;
  display: block;
}
.tablist>view:first-child text{
  border-left: none;
}
.tablist>view.on{
  color: #568fdc;
  border-bottom: 2rpx solid #568fdc;
}
.tabshow .box{
  width: 185rpx;
  display: block;
  margin:auto;
  margin-top: 310rpx;
}
.tabshow .nogoods{
  text-align: center;
  display: block;
  margin-top: 20rpx;
}
.shoplist{
  margin-top:20rpx;
  width: 750rpx;
  background: white;
  overflow: hidden;
}
.shoplist .shopone{
  width:710rpx;
  margin:auto;
  position: relative;
  overflow: hidden;
}
.shoplist .shopone .sel{
  width: 40rpx;
  float: left;
  margin-top:50rpx;
}
.shoplist .shopone .left{
  float: left;
  width: 220rpx;
  position: relative;
}
.shoplist .shopone .left>image{
  width: 200rpx;
  margin-top:20rpx;
}
.shoplist .shopone .left>text{
  position: absolute;
  right: 0;
  top: 10rpx;
  color: red;
  font-size: 20rpx;
}
.shoplist .shopone .right{
  float: left;
  width: 410rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.shoplist .shopone .right .jie{
  width: 100%;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding:0rpx 12rpx;
  margin-top:20rpx;
}
.shoplist .shopone .right .price{
  font-size: 30rpx;
  color: red;
  float: left;
  padding-left: 12rpx;
}
.shoplist .shopone .right .tuan{
  width: 110rpx;
  float: left;
  position: relative;
  margin-left: 20rpx;
  margin-top:-5rpx;
}
.shoplist .shopone .right .tuan image{
  width: 100%;
}
.shoplist .shopone .right .bottom{
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}
.shoplist .shopone .right .bottom .ppleft{
  display: flex;
  flex-direction: row;
  width: 80%;
}
.shoplist .shopone .right .oldprice,.shoplist .shopone .right .pinglun{
  font-size: 24rpx;
  color: #afafaf;
  padding-left: 12rpx;
  width:50%;
}
.shoplist .shopone .right .bottom .addCart{
  width: 20%;
}
.shoplist .shopone .right .bottom .addCart image{
  width: 40rpx;
  display: block;
  margin:auto;
}
.shoplist .shopone .right .tuan view{
  position: absolute;
  width:100%;
  text-align: center;
  color: white;
  top:15rpx;
  left: 0;
  right: 0;
  font-size: 20rpx;
}
.shoplist .shopone:last-child .right{
  border-bottom: none;
}
.shoplist .shopone .zhe{
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  width: 55rpx;
}
.tabshow .foot{
  position: fixed;
  bottom: 0;
  width:750rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: white;
  left: 0;
}
.tabshow .foot .left{
  width:160rpx;
  float: left;
}
.tabshow .foot .sel{
  width: 40rpx;
  float: left;
  margin-top:25rpx;
  margin-left: 20rpx;
}
.tabshow .foot text{
  float: left;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.tabshow .foot .right{
  width: 590rpx;
  display: flex;
  flex-direction: row;
  float: right;
}
.tabshow .foot .right>view{
  width:160rpx;
  background: #568fdc;
  color: white;
  font-size: 30rpx;
  margin-left: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 15rpx;
  text-align: center;
  border-radius: 30rpx;
}