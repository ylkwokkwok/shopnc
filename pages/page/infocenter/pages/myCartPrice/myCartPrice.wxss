.container{
  background: #f6f6f6;
}
.tablist{
  width: 100%;
  height: 88rpx;
  background: white;
  line-height: 88rpx;
  display: flex;
  flex-direction: row;
}
.tablist>view{
  width: 25%;
  text-align: center;
  font-size: 30rpx;
}
.tablist>view.on{
  border-bottom: 5rpx solid #568fdc;
}
.tabshow .noOrder{
  width: 100%;
  margin-top: 135rpx;
}
.tabshow .noOrder image{
  width: 310rpx;
  margin:auto;
  display: block;
}
.tabshow .noOrder text{
  text-align: center;
  padding-top: 20rpx;
  color: black;
  font-size: 24rpx;
  display: block;
}
.shoplist{
  margin-top:20rpx;
  width: 750rpx;
}
.shoplist .shopone{
  width:100%;
  margin:auto;
  position: relative;
  overflow: hidden;
  background: white;
  margin-bottom: 20rpx;
  padding:0 20rpx;
}
.shoplist .shopone .sel{
  width: 40rpx;
  float: left;
  margin-top:50rpx;
}
.shoplist .shopone .left{
  float: left;
  width: 200rpx;
  position: relative;
}
.shoplist .shopone .left>image{
  width: 100%;
  margin-top:20rpx;
}
.shoplist .shopone .left>text{
  position: absolute;
  right: 0;
  top: 10rpx;
  color: red;
  font-size: 20rpx;
}
.shoplist .shopone .right{
  float: left;
  width: 490rpx;
  margin-left: 20rpx;
  overflow: hidden;
  padding-bottom: 40rpx;
}
.shoplist .shopone:last-child .right{
  border-bottom: none;
}
.shoplist .shopone .right .jie{
  width: 100%;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding:0rpx 12rpx;
  margin-top:20rpx;
  color: #333;
}
.shoplist .shopone .right .price{
  font-size: 30rpx;
  color: red;
  float: left;
  padding-left: 12rpx;
}
.shoplist .shopone .right .tuan{
  width: 110rpx;
  float: left;
  position: relative;
  margin-left: 20rpx;
  margin-top:-5rpx;
}
.shoplist .shopone .right .tuan image{
  width: 100%;
}
.shoplist .shopone .right .bottom{
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
}
.shoplist .shopone .right .bottom{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.shoplist .shopone .right .bottom>view{
  width: 33.33%;
  font-size: 20rpx;
  text-align: center;
  display: block;
  color:#666;
}
.shoplist .shopone .right .bottom .oldprice text{
  font-size: 24rpx;
  text-decoration: line-through;
}
.shoplist .shopone .right .bottom .sales{
  color: #e8b223;
}
.shoplist .shopone .right .tuan view{
  position: absolute;
  width:100%;
  text-align: center;
  color: white;
  top:15rpx;
  left: 0;
  right: 0;
  font-size: 20rpx;
}
.shoplist .shopone .gray_bg{
  background: #f4f4f4;
  padding:5rpx 0;
  margin-top: 10rpx;
  width: 260rpx;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}
.shoplist .shopone .gray_bg .first{
  padding-left: 10rpx;
  color: #e8b223;
}
.shoplist .shopone .gray_bg .time{
  padding-left: 20rpx;
  color: red;
}
.shoplist .shopone .btngroup{
  width: 280rpx;
  float: right;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.shoplist .shopone .btngroup navigator{
  width: 130rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  background: #568fdc;
  color: white;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  text-align: center;
}
.shoplist .shopone .btngroup navigator:last-child{
  margin-right: 0;
  background: white;
  border:1px solid #568fdc;
  color: black;
}