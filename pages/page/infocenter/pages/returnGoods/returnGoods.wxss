.container{
  background: #f6f6f6;
}
.form{
  width: 100%;
}
.orderShop{
  width: 100%;
  background: white;
}
.orderShop .bottom{
  width: 100%;
  padding:10rpx 20rpx 20rpx 20rpx;
  overflow: hidden;
}
.orderShop .bottom>image{
  float: left;
  width: 130rpx;
}
.orderShop .bottom .center{
  width: 560rpx;
  float: left;
  margin-left: 20rpx;
}
.orderShop .bottom .center .title{
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  color: #333;
  letter-spacing: 2rpx;
}
.orderShop .bottom .center .detail{
  font-size: 20rpx;
  color: #999;
  padding-top: 20rpx;
  display: block;
}
.orderShop .bottom .center .count{
  font-size: 20rpx;
  color: #999;
  padding-top: 10rpx;
  display: block;
}
.reasons,.money,.describe{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: white;
  margin-top: 20rpx;
}
.reasons>text{
  text-align: left;
  float: left;
  font-size: 28rpx;
  padding-left: 20rpx;
}
.reasons .right{
  float: right;
  text-align: right;
  margin-right: 20rpx;
}
.reasons .right>text{
  display: block;
  text-align: right;
  float: left;
  margin-right: 10rpx;
  font-size: 28rpx;
}
.reasons .right>image{
  width: 15rpx;
  margin-top: 30rpx;
}
.money label,.describe label{
  float: left;
  font-size: 28rpx;
  width: 150rpx;
  padding-left: 20rpx;
}
.money text{
  color: red;
  float: left;
  font-size: 28rpx;
}
.describe input{
  float: left;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
}
.uploadImg{
  width: 100%;
  overflow: hidden;
  padding:20rpx;
  background: white;
  margin-top: 20rpx;
}
.uploadImg>text{
  font-size: 28rpx;
}
.uploadImg .bottom{
  width: 100%;
  overflow: hidden;
  padding-top: 20rpx;
}
.uploadImg .bottom image{
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin-right: 20rpx;
}
.form button{
  width: 710rpx;
  margin: 20rpx auto;
  background: #568fdc;
  color: white;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}
.bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0.4;
  filter: alpha(opacity=40);
}
.optionBar{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 800rpx;
  background: white;
  z-index: 200;
}
.optionBar .top{
  width: 100%;
  height: 70rpx;
  background: #eeeeee;
  line-height: 70rpx;
  position: relative;
}
.optionBar .top>text{
  text-align: center;
  display: block;
  color: #333;
  font-size: 28rpx;
}
.optionBar .top .cha{
  position: absolute;
  top: 20rpx;
  width: 25rpx;
  right: 20rpx;
  height: 25rpx;
}
.optionBar .bottom{
  width: 100%;
  padding:0 20rpx;
}
.optionBar .bottom view{
  padding:20rpx 0;
  overflow: hidden;
}
.optionBar .bottom view text{
  float: left;
  text-align: left;
  display: block;
  font-size: 28rpx;
}
.optionBar .bottom view image{
  float: right;
  width: 21rpx;
  height: 17rpx;
}
.optionBar .foot{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  position: absolute;
  bottom: 0;
  border-top: 1px solid black;
  display: flex;
  flex-direction: row;
}
.optionBar .foot>view{
  width: 50%;
  background: white;
  text-align: center;
  color: black;
  font-size: 30rpx;
}
.optionBar .foot .confirm{
  background: #568fdc;
  color: white;
}